<% layout("/layouts/boilerplate.ejs") -%>
<body>
  <h2 class="mt-3  mb-3">Domes</h2>
  <hr>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
    <% for (const listing of allListing){ %>
       
        <% for(let i=0; i<5; i++) {%>
            <% if(listing.category[i] == "Domes") {%>
                <a href="/listing/<%=listing.id%>/show" class="listing-links">
                <div class="card col" >
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <li><b><%=listing.title%></b> </br>
                      <li> &#8377;<%=listing.price%>/night
                        <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                      </p>
                    </div>
                  </div>
                </a>
            <% } %>
        <% } %>
    <% } %>
</div>
 
</body>