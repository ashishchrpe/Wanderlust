<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col col-8 offset-2">
    
    <h3>here to edit a <%=Listings.id%></h3>
    <form method="post" action="/listing/<%=Listings.id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">title</label>
            <input name="listing[title]"  class="form-control" value="<%= Listings.title %>" required/>
            <div class="invalid-feedback">Please enter valid Title!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]" id="" cols="5" rows="5" class="form-control" required><%= Listings.description %></textarea>
            <div class="invalid-feedback">Please enter valid & short description!</div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">image</label>
            <input name="listing[image]"  class="form-control" value="<%= Listings.image %>" required/> 
            <div class="invalid-feedback">Please enter URL/Link !</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">price</label>
                <input name="listing[price]"  class="form-control" value="<%= Listings.price %>"required />
                <div class="invalid-feedback">Please enter valid price!</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input name="listing[country]"  class="form-control" value="<%= Listings.country %>" required/>
                <div class="invalid-feedback">Please enter valid country!</div>       
            </div>  
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="listing[location]"  class="form-control" value="<%= Listings.location %>" required/> 
            <div class="invalid-feedback">Please enter valid location!</div>
        </div>
          
        <div class="input-group mb-3"  >
        
            <label class="input-group-text" for="inputGroupSelect01">Choose Category</label>
            <select class="form-control" name="listing[category]" id="inputGroupSelect01" required>
              <option selected>Choose...</option>
              <option value="Rooms">Rooms</option>
              <option value="Iconic Cities">Iconic Cities</option>
              <option value="Castles">Castles</option>
              <option value="Amazing Pools">Amazing Pools</option>
              <option value="Camping">Camping</option>
              <option value="Sea">Sea</option>
              <option value="farms">farms</option>
              <option value="Arctic">Arctic</option>
              <option value="Domes">Domes</option>
              <option value="Boats">Boats</option>
              <option value="Domes">Domes</option>
              <option value="Trending">Trending</option>
            </select>
          </div>

        <button class="btn btn-dark edit-btn mb-3 mt-3">edit</button>
       
    </form>
  </div>
 </div>
 
</body>
